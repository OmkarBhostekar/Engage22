<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="245dp"
    android:paddingHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPoster"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintDimensionRatio="W,3:4"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="image_poster"
            android:src="@drawable/aot_poster" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Attack On Titan"
        android:textColor="@color/headlineColor"
        android:textSize="13sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@id/tvReleaseDate"
        app:layout_constraintEnd_toEndOf="@+id/cardPoster"
        app:layout_constraintStart_toStartOf="@+id/cardPoster"
        app:layout_constraintTop_toBottomOf="@id/cardPoster"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dec 16, 2021"
        android:fontFamily="@font/roboto"
        android:textColor="@color/headlineColor"
        android:textSize="11sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMovieTitle"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>